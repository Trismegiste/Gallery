{% extends "layout.html.twig" %}

{% block title %}Welcome{% endblock %}

{% block stylesheets %}
<link href="/css/photoswipe.css" type="text/css" rel="stylesheet" />
<style>
        table.sign {
            margin: 0 auto;
        }

        .sign td {
            font-size: 48px;
            text-align: center;
            padding: 0.2em 0.3em;
        }

        td.link {
            padding: 0;
        }

        .centering {
            text-align: center;
        }

    </style>
{% endblock %}

{% block content %}
    {% include 'header.html.twig' %}
    <hr/>
    {% include 'category.html.twig' %}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="/js/klass.min.js"></script>
    <script type="text/javascript" src="/js/code.photoswipe-3.0.5.min.js"></script>
    
    <script type="text/javascript">

    (function(window, PhotoSwipe){

        document.addEventListener('DOMContentLoaded', function(){

            var
                options = {
                    getImageSource: function(obj){
                        return obj.url;
                    },
                    getImageCaption: function(obj){
                        return obj.caption;
                    }
                },
                
                cat1 = PhotoSwipe.attach( 
                    [
                        { url: '/photo/photo1.jpg', caption: 'Image 001'},
                        { url: '/photo/photo2.jpg', caption: 'Image 001'},
                        { url: '/photo/photo3.jpg', caption: 'Image 001'}
                    ], 
                    options 
                ),

                cat3 = PhotoSwipe.attach( 
                    [
                        { url: '/photo/photo1.jpg', caption: 'Image 001'},
                        { url: '/photo/photo1.jpg', caption: 'Image 001'},
                        { url: '/photo/photo3.jpg', caption: 'Image 001'}
                    ], 
                    options 
                );


                document.getElementById('cat1').addEventListener('click', function() {
                    cat1.show(0);
                })
                document.getElementById('cat3').addEventListener('click', function() {
                    cat3.show(0);
                })
                
        }, false);


    }(window, window.Code.PhotoSwipe));

</script>

{% endblock %}
