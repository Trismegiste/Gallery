{% extends "layout.html.twig" %}

{% block title %}Welcome{% endblock %}

{% block stylesheets %}
<link href="/css/photoswipe.css" type="text/css" rel="stylesheet" />
<style>
        table.sign {
            margin: 0 auto;
        }

        .sign td {
            font-size: 48px;
            text-align: center;
            padding: 0.2em 0.3em;
        }

        td.link {
            padding: 0;
        }

        .centering {
            text-align: center;
        }

    </style>
{% endblock %}

{% block content %}
    <div class="pure-g-r">
        <div class="pure-u-1-1">
            <table class="sign">
                <tr><td>T</td><td>S</td><td>G</td></tr>
                <tr><td>R</td><td>T</td><td>A</td></tr>
                <tr><td>I</td><td>E</td><td>L</td></tr>
                <tr><td>S</td><td>P</td><td>L</td></tr>
                <tr><td>M</td><td>H</td><td>E</td></tr>
                <tr><td>E</td><td>O</td><td>R</td></tr>
                <tr><td>G</td><td>T</td><td>Y</td></tr>
                <tr><td>I</td><td>O</td><td class="link"><img src="/css/rvb.png"/></td></tr>
            </table>
        </div>
    </div>
    <hr/>
    <div class="pure-g-r centering">
        <div class="pure-u-1-3">
            <a href="#">
                <img src="http://placehold.it/200x200" alt="placeholder image"/>
            </a>
        </div>
        <div class="pure-u-1-3">
            <a href="#">
                <img src="http://placehold.it/200x200" alt="placeholder image"/>
            </a>
        </div>
        <div class="pure-u-1-3">
            <a href="#3" id="cat3">
                <img src="http://placehold.it/200x200" alt="placeholder image"/>
            </a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="/js/klass.min.js"></script>
    <script type="text/javascript" src="/js/code.photoswipe-3.0.5.min.js"></script>
    
    <script type="text/javascript">

    (function(window, PhotoSwipe){

        document.addEventListener('DOMContentLoaded', function(){

            var
                options = {
                    preventHide: false,
                    getImageSource: function(obj){
                        return obj.url;
                    },
                    getImageCaption: function(obj){
                        return obj.caption;
                    }
                },
                instance = PhotoSwipe.attach( 
                    [
                        { url: '/photo/photo1.jpg', caption: 'Image 001'},
                        { url: '/photo/photo2.jpg', caption: 'Image 001'},
                        { url: '/photo/photo3.jpg', caption: 'Image 001'}
                    ], 
                    options 
                );

                document.getElementById('cat3').addEventListener('click', function() {
                    instance.show(0);
                })
                
        }, false);


    }(window, window.Code.PhotoSwipe));

</script>

{% endblock %}
